{{>layouts/header}}
{{#article}}
<form class="container" action="/articles/update" method="post">
    <input name="id" type="hidden" value="{{id}}">
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title" value="{{title}}"> <!-- value값으로 데이터 -->
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="content">{{content}}</textarea> <!-- value값으로 데이터 -->
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    <a href="/articles/{{id}}">Back</a> <!-- 뒤로가기 링크 -->
</form>
{{/article}}
{{>layouts/footer}}